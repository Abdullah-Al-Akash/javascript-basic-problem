{
        "version": "0.2.0",
        "configurations": [
                {
                        "type": "pwa-node",
                        "request": "launch",
                        "name": "Launch Program",
                        "skipFiles": [
                                "<node_internals>/**"
                        ],
                        "program": "${workspaceFolder}\\recursion.js"
                },
                {
                        "type": "node-terminal",
                        "name": "JavaScript Debug Terminal",
                        "request": "launch",
                        "cwd": "${workspaceFolder}"
                },
                {
                        "type": "pwa-node",
                        "name": "Run Current File",
                        "request": "launch",
                        "program": "${workspaceFolder}\\recursion.js"
                }
        ]
}